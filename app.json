{
  "expo": {
    "name": "Safe Connect",
    "slug": "safe-connect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safeconnect",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safeconnect.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Safe Connect needs your location to track your journeys and share your location during emergencies.",
        "NSLocationAlwaysUsageDescription": "Safe Connect needs your location to monitor your safety during active journeys."
      }
    },
    "android": {
      "package": "com.safeconnect.app",
      "adaptiveIcon": {
        "backgroundColor": "#007AFF",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#007AFF",
          "dark": {
            "backgroundColor": "#1F2123"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Safe Connect needs your location to track your journeys and share your location during emergencies."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
